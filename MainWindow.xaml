<Window x:Class="IogoSistem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IogoSistem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_funcionario" Content="Button" HorizontalAlignment="Left" Margin="73,30,0,0" VerticalAlignment="Top" Width="75" Click="Abrir_Usuario"/>
        <Button x:Name="btn_list" Content="Button" HorizontalAlignment="Left" Margin="73,114,0,0" VerticalAlignment="Top" Width="75" Click="Abrir_lista"/>
        <Button x:Name="btn_evento" Content="Button" HorizontalAlignment="Left" Margin="73,182,0,0" VerticalAlignment="Top" Width="75" Click="Abrir_Evento" RenderTransformOrigin="0.516,3.333"/>
        <Button x:Name="btn_agenda" Content="Button" HorizontalAlignment="Left" Margin="73,228,0,0" VerticalAlignment="Top" Width="75" Click="Abrir_Agenda" RenderTransformOrigin="0.516,3.333"/>
        <Button x:Name="BtnCadastrarFor" Content="cadastrar Fornecedor" HorizontalAlignment="Left" Margin="578,33,0,0" VerticalAlignment="Top" Width="200" Height="82" RenderTransformOrigin="0.5,0.5" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btn_evento_Copy" Content="Button" HorizontalAlignment="Left" Margin="73,265,0,0" VerticalAlignment="Top" Width="75" Click="produtos" RenderTransformOrigin="0.516,3.333"/>
        <Button x:Name="BtnConsultarFor" Content="consultar Fornecedor" HorizontalAlignment="Left" Margin="578,152,0,0" VerticalAlignment="Top" Width="200" Height="82" RenderTransformOrigin="0.5,0.5" Click="BtnConsultarFor_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
